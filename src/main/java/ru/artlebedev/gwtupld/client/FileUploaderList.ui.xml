<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'>
  <ui:style type="ru.artlebedev.gwtupld.client.FileUploaderList.MyCss">
    .dropzone {
      border: 3px solid #adff2f;
      border-radius: 3px;
      padding: 1em 2em;
      text-align: center;
    }

    .dropzone:hover,
    .dropzoneHover {
      background-color: green;
    }

    ul {
      list-style: decimal-leading-zero;
    }
  </ui:style>
  <div>
    <div class="{style.dropzone}" ui:field="dropZoneAndButtonContainer">
      Method `Initialize` of `FileUploader` has not been
      called from a subclass constructor
    </div>
    <br />
    <button ui:field="cancel">Cancel uploading</button>
    <ul ui:field="list" />
  </div>
</ui:UiBinder>