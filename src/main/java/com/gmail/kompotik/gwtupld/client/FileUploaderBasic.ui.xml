<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'>
  <ui:style type="com.gmail.kompotik.gwtupld.client.FileUploaderBasic.MyCss">
    .dropzone {
      border: 1px dashed #bbbbbb;
      border-radius: 15px;
      padding: 1em 2em;
      text-align: center;
    }

    .dropzone:hover,
    .dropzoneHover {
      background-color: #efefef;
    }

    .data {
      margin-top: 1em;
      border-collapse: collapse;
    }

    .data td {
      /*border-bottom: 1px solid #dddddd;*/
      padding: .3em 1em .3em 0;
      white-space: nowrap;
    }

    td.progressBar {
      width: 200px;
      border: 1px solid #8A96B5;
      padding: 0;
      text-align: center;
    }

    td.progressBar div {
      background-color: #DEE7FF;
      padding: .3em 0;
    }
    div.totalProgress {
      margin: 1em 0;
    }
  </ui:style>
  <div>
    <div class="{style.dropzone}" ui:field="dropZoneAndButtonContainer">
      Drop files here or click to attach
    </div>
    <div ui:field="totalProgress" class="{style.totalProgress}" />
    <table ui:field="table" class="{style.data}">
    </table>
  </div>
</ui:UiBinder>