<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'>
  <ui:style type="com.gmail.kompotik.gwtupld.client.FileUploaderList.MyCss">
    .dropzone {
      border: 3px solid #adff2f;
      border-radius: 3px;
      padding: 1em 2em;
      text-align: center;
    }

    .dropzone:hover,
    .dropzoneHover {
      background-color: green;
    }

    ul {
      list-style: decimal-leading-zero;
    }
  </ui:style>
  <div>
    <div class="{style.dropzone}" ui:field="dropZoneAndButtonContainer">
      Drop files here or click to attach
    </div>
    <ul ui:field="list" />
  </div>
</ui:UiBinder>